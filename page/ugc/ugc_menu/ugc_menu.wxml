<view class="column-reverse start center2" style="background-color:#4E84E5;width:100%;height:100%">
    <image src="http://question-resource-zh.hortor.net/image/new_skin/battle/bg_battle.png?v=0.1.12" style="width:750rpx;height:502rpx;"></image>
</view>
<view class="column start center2" style="position: absolute;left:0px;top:0px;width:100%;height:100%;">
    <view class="column start center2" style="">
        <view style="height:140rpx"></view>
        <view animation="{{ani_iwill}}" bindtap="callback_iwill_clicked" class="column start center2 item-normal" data-id="{{item.id}}" hoverClass="brightness" style="width:688rpx;height:196rpx;position: relative;">
            <image class="" src="http://question-resource-zh.hortor.net/image/new_skin/question_factory/btn_qf_setquestion.png?v=0.1.12" style="position: absolute;left:0px;bottom:0px;width:100%;height:100%;"></image>
            <view class="row-reverse start center2 show-form" style="position:absolute;right:40rpx;bottom:20rpx;width:300rpx;height:40rpx;font-size:30rpx;text-shadow: 0rpx 0rpx 2rpx #56514d;" wx:if="{{quizStats}}">
                出题数量:{{quizStats.makeNum}}
            </view>
        </view>
        <view style="height:20rpx"></view>
        <view animation="{{ani_my}}" bindtap="callback_myquestions_clicked" class="column start center2 item-normal" data-id="{{item.id}}" hoverClass="brightness" style="width:688rpx;height:196rpx;position: relative;">
            <image class="" src="http://question-resource-zh.hortor.net/image/new_skin/question_factory/btn_qf_myquestion.png?v=0.1.12" style="position: absolute;left:0px;bottom:0px;width:100%;height:100%;"></image>
            <view class="row-reverse start center2 show-form" style="position:absolute;right:40rpx;bottom:20rpx;width:300rpx;height:40rpx;font-size:30rpx;text-shadow: 0rpx 0rpx 2rpx #56514d;" wx:if="{{quizStats}}">
                过审数量:{{quizStats.passNum}}
            </view>
        </view>
        <view style="height:20rpx"></view>
        <view animation="{{ani_check}}" bindtap="callback_check_clicked" class="column start center2 item-normal" data-id="{{item.id}}" hoverClass="brightness" style="width:688rpx;height:196rpx;position: relative;">
            <image class="" src="http://question-resource-zh.hortor.net/image/new_skin/question_factory/btn_qf_examinequestion.png?v=0.1.12" style="position: absolute;left:0px;bottom:0px;width:100%;height:100%;"></image>
            <view class="row-reverse start center2 show-form" style="position:absolute;right:40rpx;bottom:20rpx;width:300rpx;height:40rpx;font-size:30rpx;text-shadow: 0rpx 0rpx 2rpx #56514d;" wx:if="{{quizStats}}">
                审核数量:{{quizStats.checkNum}}
            </view>
        </view>
    </view>
</view>
