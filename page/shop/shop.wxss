@import "../../template/propItem.wxss";

@import "../../template/baseInfoBar.wxss";

@import "../../template/wheelGroup.wxss";

@import "../../template/shareBtn.wxss";

@import "../../template/ItemDetail.wxss";

.main-show {
    animation: frames-main-show 0.5s ease-out;
}

@-webkit-keyframes frames-main-show {
    0% {
        transform: scale(0.2);
        opacity: 0;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }
}

@keyframes frames-main-show {
    0% {
        transform: scale(0.2);
        opacity: 0;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }
}

.btn-show {
    animation: frames-btn-show 0.5s ease-out;
}

@-webkit-keyframes frames-btn-show {
    0% {
        bottom: -250px;
    }

    100% {
        bottom: 0px;
    }
}

@keyframes frames-btn-show {
    0% {
        bottom: -250px;
    }

    100% {
        bottom: 0px;
    }
}